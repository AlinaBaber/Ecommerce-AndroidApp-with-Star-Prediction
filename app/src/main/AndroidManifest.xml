<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hypermart.login">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity android:name=".com.hypermart.login.helani.SignIn" />
        <activity android:name=".com.hypermart.login.helani.SignUp" />
        <activity
            android:name=".com.hypermart.login.gihan.Main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".com.hypermart.login.gihan.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".com.hypermart.login.helani.EditAccount" />
        <activity android:name=".com.hypermart.login.helani.MyAccount" />
        <activity android:name=".com.hypermart.login.gihan.Home" />
        <activity android:name=".com.hypermart.login.vimanga.EditProducts" />
        <activity android:name=".com.hypermart.login.isuri.ShoppingCart" />
        <activity android:name=".com.hypermart.login.gihan.CustomerProducts" />
        <activity android:name=".com.hypermart.login.gihan.Orders" />
        <activity android:name=".com.hypermart.login.gihan.EditOrder" />
        <activity android:name=".com.hypermart.login.gihan.DeliveryInfo" />
        <activity android:name=".com.hypermart.login.gihan.PaymentInfo" />
        <activity android:name=".com.hypermart.login.gihan.PaymentForCard" />
        <activity android:name=".com.hypermart.login.vimanga.ViewProduct"></activity>
        <activity android:name=".com.hypermart.login.gihan.CustomerProductReview"></activity>
        <activity android:name=".com.hypermart.login.gihan.CustomerViewProduct"></activity>
        <activity android:name=".com.hypermart.login.gihan.AddProductReview"></activity>
    </application>

</manifest>